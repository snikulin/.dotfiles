command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

[weather]
command=i3weather
interval=3600

[backlight]
interval=once
command=i3backlight
signal=12

[volume]
interval=once
command=i3volume
signal=10

[iface]
label=🌐
#instance=wlan0
color=#00FF00
interval=10

[wifi]
label=📶
instance=wlp2s0
interval=10

[battery]
command=echo $(cat /sys/class/power_supply/BAT0/status | sed -e "s/,//g;s/Discharging/🔋/;s/Charging/🔌/;s/Unknown/❓/;s/Full/⚡/;s/ 0*/ /g;s/ :/ /g") $(cat /sys/class/power_supply/BAT0/capacity | sed -e 's/$/%/')
interval=5

[temperature]
interval=5

[time]
label=📅
command=echo $(date '+%d %b %Y %H:%M') 🕓
interval=30
